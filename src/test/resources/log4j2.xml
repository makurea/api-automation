<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{HH:mm:ss}] [%t] %-5level %logger{36} - %msg%n" charset="UTF-8"/>
    </Console>

    <!-- Основной лог -->
    <RollingFile name="FileLogger"
      fileName="logs/test.log"
      filePattern="logs/test-%d{yyyy-MM-dd}.log">
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level %logger{36} - %msg%n" charset="UTF-8"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
        <TimeBasedTriggeringPolicy interval="1"/>
      </Policies>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>

    <!-- Отдельный лог ошибок -->
    <RollingFile name="ErrorFile"
      fileName="logs/error.log"
      filePattern="logs/error-%d{yyyy-MM-dd}.log">
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %logger{36} - %msg%n"/>
      <Filters>
        <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
      </Policies>
      <DefaultRolloverStrategy max="3"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <!-- Твой код -->
    <Logger name="com.makurea" level="debug" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="FileLogger"/>
      <AppenderRef ref="ErrorFile"/>
    </Logger>

    <!-- Остальные логи -->
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="FileLogger"/>
      <AppenderRef ref="ErrorFile"/>
    </Root>
  </Loggers>
</Configuration>
